{
  "private": true,
  "dependencies": {
    "fs": "0.0.1-security",
    "lodash": "^4.17.15",
    "readline": "^1.3.0"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.24.0"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@typescript-eslint/eslint-plugin": "^2.32.0",
    "@typescript-eslint/parser": "^2.32.0",
    "ava": "^3.8.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "json-schema": "^0.2.5",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3",
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1"
  },
  "scripts": {
    "compile": "npm run tsc",
    "clean:compile": "rimraf build",
    "pre1test": "npm-run-all lint",
    "test": "ava test/**",
    "clean": "npm-run-all --parallel clean:compile",
    "lint": "npm-run-all --parallel eslint",
    "eslint": "eslint --ext .ts --ignore-pattern .gitignore .",
    "tsc": "tsc"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "airbnb-typescript"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "require-jsdoc": "off",
      "spaced-comment": "off"
    }
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "build/src/",
        "test/": "build/test/"
      }
    }
  }
}
