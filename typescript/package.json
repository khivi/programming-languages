{
  "private": true,
  "dependencies": {
    "fs": "0.0.1-security",
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "lodash": "^4.17.15",
    "readline": "^1.3.0"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@typescript-eslint/parser": "^2.32.0",
    "ava": "^3.8.2",
    "eslint": "^6.8.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3",
    "typescript-eslint-parser": "^22.0.0"
  },
  "scripts": {
    "compile": "npm run tsc",
    "clean:compile": "rimraf build",
    "pre1test": "npm-run-all lint",
    "test": "ava test/**",
    "clean": "npm-run-all --parallel clean:compile",
    "lint": "npm-run-all --parallel eslint",
    "eslint": "eslint --ext .js --ignore-pattern .gitignore .",
    "tsc": "tsc"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": [],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "typescript-eslint-parser",
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "require-jsdoc": "off",
      "spaced-comment": "off"
    }
  },
  "ava": {
    "typescript": {
        "rewritePaths": {
            "src/": "build/src/",
            "test/": "build/test/"
        }
    }
  }
}
